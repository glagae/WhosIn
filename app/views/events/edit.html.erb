    <script>
      $("#menu-toggle").on('click', function(e){
        $(this).blur();
        if ($('#menu-toggle i').hasClass('fa-arrow-right')) {
          $('#menu-toggle i').removeClass('fa-arrow-right').addClass('fa-arrow-left');
        } else {
          $('#menu-toggle i').removeClass('fa-arrow-left').addClass('fa-arrow-right');
        }
